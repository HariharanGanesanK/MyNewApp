<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTP for both FastAPI backends -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Backend 1 (Session/Authentication) -->
        <domain includeSubdomains="true">192.168.1.6</domain>

        <!-- Backend 2 (Dashboard/Transactions) -->
        <domain includeSubdomains="true">192.168.1.7</domain>

        <!-- Emulator/Localhost Access -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>
